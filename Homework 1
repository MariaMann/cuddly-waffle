№5
public static void main(String[] args) throws IOException {

   Scanner scanner = new Scanner(System.in);
   System.out.print("Input a number: ");

   if(scanner.hasNextInt()){
       int number = scanner.nextInt();
       for (int i = 1; i <= 10; i++){
           System.out.println(number + " * " +  i + " =  " + number * i);
       }
   } else {
       System.out.println("Sorry, but it's not a digit");
   }
}

№6

public static void main(String[] args) throws IOException {

   Scanner scanner = new Scanner(System.in);
   System.out.print("Input a radius: ");

   double radius = scanner.nextDouble();
   double area = radius * radius * 3.14;
   System.out.println("Area of a circle is: " +  area);

   double perimetr = radius * 2 * 3.14;
   System.out.println("Perimetr of a circle is : " + perimetr);
}


№7
public static void main(String[] args) throws IOException {

   Scanner scanner = new Scanner(System.in);
   System.out.print("Enter temperature in Fahrenheit: ");

   double fahrenheit = scanner.nextDouble();
   double celsius =  5 * ( fahrenheit - 32 ) / 9 ;
   System.out.println( fahrenheit + " degree Fahrenheit is equal to " +  celsius + " in Celsius ");
}



№8
public static void main(String[] args) throws IOException {

   Scanner scanner = new Scanner(System.in);
   System.out.print("Enter a number in inches: ");
   double inches = scanner.nextDouble();
   double meters = inches * 0.0254 ;
   System.out.println( inches + " inches is equal to " +  meters + " in meters ");
}

№9
public static void main(String[] args) throws IOException {

   Scanner scanner = new Scanner(System.in);
   System.out.print("Enter a number : ");
   double number = scanner.nextDouble();

   if ( number > 0){
       System.out.println( number + " is positive: ");
   } else {
       System.out.println( number + " is negative");
   }
}

№10
public static void main(String[] args) throws IOException {
   int number1, number2, number3;
   Scanner scanner = new Scanner(System.in);

   System.out.println("Enter the first number: ");
   number1= scanner.nextInt();
   System.out.println("Enter a second number: ");
   number2  =  scanner.nextInt();
   System.out.println("Enter a third number");
   number3 = scanner.nextInt();

   if (number1 >= number2 && number1 >= number3){
       System.out.print(number1 + " is the greatest");
   } else if(number2 >= number1 && number2 >= number3){
       System.out.print(number2+ " is the greatesr");
   }
   else {
       System.out.println(number3 + " is the greatest ");
   }
}

№11
public static void main(String[] args) throws IOException {
   int number1, number2, number3, number4, number5;
   Scanner scanner = new Scanner(System.in);
   System.out.print("Enter 5 numbers: ");
   number1 = scanner.nextInt();
   number2 = scanner.nextInt();
   number3 = scanner.nextInt();
   number4 = scanner.nextInt();
   number5 = scanner.nextInt();
   int sum = number1 + number2 + number3 + number4 + number5;
   double average = sum/5;
   System.out.println("Sum of this numbers is " + sum);
   System.out.println("Average of this numbers is:  " + average );
}

№12
public static void main(String[] args) throws IOException {
   int number;
   Scanner scanner = new Scanner(System.in);
   System.out.print("Enter a number: ");
   number = scanner.nextInt();
   if ( number % 2 == 0 ) {
       System.out.println(number + " is even ");
   } else {
   System.out.println(number + " is odd ");}
}
